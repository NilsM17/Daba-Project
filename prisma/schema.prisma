generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Arbeitszeiten {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  EndTime   String
  StartTime String
  badge     String
}

model Futter {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Futter  String
  TierArt String
  Uhrzeit String
}

model Orte {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  Name       String
  PLZ        String
  created_at String
}

model Pfleger {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  FirstName   String
  LastName    String
  PLZ         String
  Phonenumber String
  created_at  String
}

model TierArten {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  Art     String
  Geb_ude String @map("Geb√§ude")
  Revier  String
}

model Tiere {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  ArtenID    String
  Name       String
  Pfleger    String
  created_at String
}

model user {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  FirstName  String?
  LastName   String?
  password   String
  token      String
  userRights String
  username   String
}
